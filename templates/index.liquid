{% if settings.slider_home_enable %}
    <section id="slideshow" class="clearfix"> 
      	{% include 'slideshow' %}
    </section>
{% endif %}
<section id="columns" class="columns-container">
  <div id="center_column" class="center_column">
    <div class="center_wrap">
      <div class="container">
        {% if settings.simpleproduct_enable %}
        <div class="row {{ settings.simpleproduct_class }}">
          <div class="col-xs-12 col-sm-12 {% if settings.animated_enable %}wow animated {{ settings.animated_1 }}{% endif %}">
            {% assign title_block = settings.simpleproduct_title %}
            {% assign title_description = settings.simpleproduct_description %}
            {% include 'block-productfeatured' %}    
          </div>
        </div>
        {% endif %}
      </div>
      {% if settings.home_productextra_enable %}
        <div class="{{ settings.home_productextra_class }}">
			{% include 'block-productextra' %}
        </div>
      {% endif %}
      {% if settings.homehtml_enable %}
      <div class="block_homehtml {% if settings.animated_enable %}wow animated {{ settings.animated_3 }}{% endif %}">
      	<div class="container">
          <div class="row">
            <div class="col-xs-12 col-sm-6">
            {% assign title_block = settings.homehtml_title %}
            {% assign title_description = settings.homehtml_description %}
            {% assign homehtml_link = settings.homehtml_link %}  
            {% assign homehtml_link_txt = settings.homehtml_link_txt %}
            {% include 'block-homehtml' %}
            </div>
          </div>
      	</div>
      </div>
      {% endif %}
      {% if settings.carousel_design_enable %}
        {% assign columns_product = settings.carousel_design_columntab | plus:0 %}
      	{% assign title_block = settings.carousel_design_title %}
      	{% assign title_description = settings.carousel_design_description %}
      	{% include 'block-designcarousel' %}
      {% endif %}
      {% if settings.home_image360_enable %}
      <div class="block_image360 {% if settings.animated_enable %}wow animated {{ settings.animated_5 }}{% endif %}">
        <div class="container">
            <div class="row">
              <div class="col-xs-12 col-sm-12">
                {% assign title_block = settings.home_image360_title %}
            	{% assign title_description = settings.home_image360_description %}
          		{% include 'block-image360' %}
              </div>
          </div>
        </div>
      </div>
      {% endif %}
      {% if settings.testimonials_enable %}
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-12 {% if settings.animated_enable %}wow animated {{ settings.animated_6 }}{% endif %}">
            {% assign title_block = settings.testimonials_title %}
            {% assign title_description = settings.testimonials_description %}
            {% include 'block-testimonial' %}
          </div>
        </div>
      </div>
      {% endif %}
      {% if settings.promotion_enable %}
      {% include 'block-promotion' %}      
      {% endif %}
      {% if settings.home_productlists_enable %}
      <div class="container">
        <div class="row {{ settings.home_productlists_class }}">
          <div class="products_top col-xs-12 col-sm-12 {% if settings.animated_enable %}wow animated {{ settings.animated_8 }}{% endif %}">
            {% assign item_in_page = settings.home_productlists_itempage | plus:0 %}
            {% assign columns_product = settings.home_productlists_columntab | plus:0 %}
            {% assign product_in_tab = settings.home_productlists_limit | plus:0 %}
            {% assign title_block = settings.home_productlist_titletab %}
            {% assign title_description = settings.home_productlist_description %}
            {% assign product_interval = settings.home_productlists_interval %}
            {% assign type_block = settings.home_productlists_type %}
            {% assign collection_produclists = collections[settings.home_productlists_collection].products %}
            {% assign proLazyLoad = settings.home_productlists_lazy %}
            {% include 'block-productlist' with '1' %}
          </div>
        </div>
      </div>
      {% endif %}   
      {% if settings.gallery_slides_enable %}
      <div class="{{ settings.gallery_slides_class }}">
          <div class="image_grid">
            {% include 'block-gallery-slides'%}
          </div>
      </div>
      {% endif %}              
    </div>
  </div>
</section>